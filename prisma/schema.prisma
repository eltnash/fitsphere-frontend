// This is your Prisma schema file

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  age      Int?
  workouts Workout[]
}

model Workout {
  id            Int      @id @default(autoincrement())
  userId        Int
  type          String
  duration      Int
  caloriesBurned Int
  User          User     @relation(fields: [userId], references: [id])
}